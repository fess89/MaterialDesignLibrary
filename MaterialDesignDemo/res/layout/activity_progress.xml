<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">

		<!-- PROGRESS BAR INDETERMINATE -->

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="32dp"
			android:layout_marginLeft="24dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:text="Progress Bar Circular Indeterminate"/>

			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_alignParentBottom="true"
				android:background="#1E88E5"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<com.fess89.materialdesign.views.ProgressBarCircularIndeterminateRounded
				android:id="@+id/progressBarCircularIndetermininate"
				android:layout_marginTop="10dip"
				android:layout_width="200dip"
				android:layout_height="200dip"
				android:layout_centerInParent="true"
				android:background="#1E88E5"
				android:padding="10dp"
				materialdesign:thickness="20dip"
				materialdesign:outerThickness="10dip"
				materialdesign:arcColor="#1E88E5"
				materialdesign:minArcAngle="0"
				materialdesign:maxArcAngle="270"/>

		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>
